    <script>
        let images = [];
        let currentIndex = 0;
        
        function loadImages(imgArray) {
            images = imgArray;
            if (images.length > 0) {
                document.getElementById('slideshow-img').src = images[0];
            }
        }
        
        function prevImage() {
            if (currentIndex > 0) {
                currentIndex--;
                document.getElementById('slideshow-img').src = images[currentIndex];
            }
        }
        
        function nextImage() {
            if (currentIndex < images.length - 1) {
                currentIndex++;
                document.getElementById('slideshow-img').src = images[currentIndex];
            }
        }
    </script>
